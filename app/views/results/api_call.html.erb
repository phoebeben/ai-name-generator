<div class="container grid place-items-center" data-controller="regenerate">
  <h1 class="text-center font-bold mt-10 text-purple-500 text-5xl">your results</h1>

  <div class="flex justify-between w-11/12">
    <% @response.each do |result| %>
      <div data-action="click->regenerate#select" data-regenerate-target="result" class="results mt-20 items-center ml-1 mr-1 bg-violet-500 hover:bg-violet-400 w-32 h-32 rounded-full text-center border-4 border-purple-300 shadow-lg">
        <p class="mt-12 font-bold text-white"><%= result %></p>
      </div>
    <% end %>
  </div>

  <p id="input" class="hidden"><%= @input %></p>

  <div class="mt-32 text-center">
    <p class="text-center">Want more options?</p>
    <p class="text-center mt-2">Simply select the results you like to keep them, and regenerate!</p>
    <button data-action="click->regenerate#regenerateResults" class="mt-10 text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br font-medium rounded-lg text-lg px-5 py-2.5 text-center mr-2 mb-2 ">Regenerate!</button>
  </div>
</div>
